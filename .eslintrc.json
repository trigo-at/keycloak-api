{
	"extends": [
		"trigo",
		"prettier"
	],
	"plugins": [
		"prettier"
	],
	"env": {
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"sourceType": "script"
	},
	"rules": {
		"strict": [
			2,
			"global"
		],
		"no-underscore-dangle": 0,
		"prettier/prettier": [
			"warn"
		]
	},
	"overrides": [
		{
			"files": [
				"**/*.specs.js"
			],
			"rules": {
				"one-var": 0,
				"one-var-declaration-per-line": 0,
				"prefer-destructuring": 0,
				"no-unused-expressions": 0
			}
		}
	]
}